{
  "name": "@rtoken/subgraph",
  "private": true,
  "description": "Subgraph for the rToken Ethereum contracts",
  "repository": "https://github.com/rtoken-project/rtoken-monorepo",
  "homepage": "https://rdai.money/",
  "version": "1.0.1-rc6",
  "license": "MIT",
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "create-local": "graph create --node http://localhost:8020/ rtoken-test",
    "remove-local": "graph remove --node http://localhost:8020/ rtoken-test",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 rtoken-test",
    "deploy": "graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/rtoken-project/rtoken-analytics",
    "junk": " ",
    "setup-subgraph-local": "yarn codegen && yarn create-local && yarn deploy-local",
    "deploy-subgraph": "yarn create-local && yarn deploy-local --watch",
    "test-local": "LOCAL=true SUBGRAPH_URL=$npm_package_subgraph_local_url mocha --timeout 7000 test/RTokenAnalytics.test.js",
    "test": "SUBGRAPH_ID=$npm_package_subgraph_mainnet_id SUBGRAPH_URL=$npm_package_subgraph_mainnet_url mocha --timeout 7000 test/RTokenAnalytics.test.js"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.16.1",
    "@graphprotocol/graph-ts": "0.16.0"
  },
  "devDependencies": {
    "ganache-cli": "^6.9.1",
    "truffle": "^5.1.22"
  },
  "workspaces": {
    "nohoist": [
      "**/@graphprotocol",
      "**/@graphprotocol/**"
    ]
  }
}
